{
  "name": "@eso-status/live-services",
  "version": "2.0.0-dev.0",
  "description": "Library used to get servers status of The elders scrolls Online game with https://live-services.elderscrollsonline.com/status/realms",
  "main": "lib/index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "build": "rm -f index.js && rm -f index.d.ts && tsc --project tsconfig.build.json",
    "dev": "npm run build && node .",
    "watch": "nodemon --exec npm run dev",
    "test": "jest --runInBand --setupFiles",
    "test:watch": "jest --runInBand --watch --setupFiles",
    "test:cov": "jest --runInBand --coverage --setupFiles"
  },
  "files": [
    "lib/classes/LiveServicesElement.d.ts",
    "lib/classes/LiveServicesElement.js",
    "lib/connectors/LiveServicesConnector.d.ts",
    "lib/connectors/LiveServicesConnector.js",
    "lib/index.d.ts",
    "lib/index.js",
    ".npmrc",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "engineStrict": true,
  "engines": {
    "node": "^18.18.0 || >=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:eso-status/live-services.git"
  },
  "author": "@dov118 <contact@dov118.dev> (https://dov118.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eso-status/live-services/issues"
  },
  "homepage": "https://github.com/eso-status/live-services#readme",
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "22.5.1",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@typescript-eslint/typescript-estree": "7.18.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.8.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-unused-imports": "3.2.0",
    "jest": "29.7.0",
    "nodemon": "3.1.4",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "4.0.0",
    "ts-jest": "29.2.5",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@eso-status/types": "1.0.7",
    "axios": "1.7.5",
    "socket.io": "4.7.5",
    "socket.io-client": "4.7.5",
    "supertest": "7.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.e2e-spec\\.ts|.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
